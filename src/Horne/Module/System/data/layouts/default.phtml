    <script src="<?=$api->getPathToRoot()?>/assets/jquery-1.10.2.min.js"></script>
    <script>
/*<![CDATA[*/
$(function () {
    $(document).keydown(function (event) {
        switch (event.which) {
            case 37:
                var $tmp = $('#horne-system-navigation-previous');
                if ($tmp.length > 0) {
                    window.location = $tmp.attr('href');
                }
                break;
            case 39:
                var $tmp = $('#horne-system-navigation-next');
                if ($tmp.length > 0) {
                    window.location = $tmp.attr('href');
                }
                break;
        }
    });
});
/*]]>*/
    </script>
