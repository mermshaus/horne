$m = $vars['meta'];

$title = (isset($m['title'])) ? $m['title'] : '';

$horne = $api;

$getTitleById = function ($id) use ($horne) {
    $meta = $horne->getMetaByid($id);
    $payload = $meta->getMetaPayload();
    $title = (isset($payload['title'])) ? $payload['title'] : 'Untitled';
    return $title;
};

$menuIds = array();

$skip = array('index', 'horne-debug-debug', 'horne-blog-archive-index');

foreach ($api->getMetasByType('page') as $meta) {
    if (!in_array($meta->getId(), $skip)) {
        $menuIds[] = $meta->getId();
    }
}

$bodyClass = '';

if ($m['id'] === 'index') {
    $bodyClass = ' class="index"';
}

